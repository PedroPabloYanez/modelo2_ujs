<p id="notice"><%= notice %></p>
<%= render 'posts/form', post: @post %>
<h1>Posts</h1>

<%= form_with url: posts_path, method: :get do %>
  <%= label_tag("search for:") %>
  <%= text_field_tag("search") %>
  <%= submit_tag("search") %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>
  </tbody>
</table>

<div id="edit"></div>

<br>

<%= link_to 'New Post', new_post_path %>
<div id="post-modal"></div>
<%= render 'modal_post' %>

